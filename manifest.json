{
  "name": "Facebook DEconditioning Counter",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Count the number of times you actually go and visit Facebook per day",
  "background": {
    "scripts":[
	"background.js"
	]
  }, 
  "permissions":[
      "notifications",
      "tabs"
   ],
   "content_scripts":[
      {
	"matches":[
            "http://*/*",
            "https://*/*"
         ],
	"js":[
            "vendor/jquery-1.8.0.min.js",
	    "facebook.js"
	]
     }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html" 
  }
}
